<table class='table table-bordered table-condensed table-hover table-striped'>
    <tbody>
        {% embed '@NinesUtil/term/partial/show.html.twig' with {'term': relationship_category} %}
            {% block callback %}
                <tr>
                    <th>Weight</th>
                    <td>{{ relationship_category.weight }}</td>
                </tr>
            {% endblock %}
        {% endembed %}
    </tbody>
</table>

<h2>Relationships</h2>
{% if relationships|length > 0 %}
    <table class="table table-bordered table-condensed table-hover table-striped">
        <thead>
            <tr>
                <th>Person</th>
                <th>Category</th>
                <th>Relation</th>
            </tr>
        </thead>
        <tbody>
            {% for relationship in relationships %}
                <tr>
                    <td>
                        <a href="{{ path('person_show', { 'id': relationship.relation.id }) }}">
                            {{ relationship.relation }}
                        </a>
                    </td>
                    <td>
                        {{ relationship.category }}
                    </td>
                    <td>
                        <a href="{{ path('person_show', { 'id': relationship.person.id }) }}">
                            {{ relationship.person }}
                        </a>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

    <div class="navigation">
        {{ knp_pagination_render(relationships) }}
    </div>

{% endif %}
